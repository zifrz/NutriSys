<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingVertical="32dp">

        <TextView
            android:id="@+id/screenHeader_nutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="Nutrition"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="1dp">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="text"
                android:queryHint="Search Something"
                app:iconifiedByDefault="false" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/popularItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingVertical="10dp"
            android:text="Most Nutritious Products"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <HorizontalScrollView
            android:id="@+id/popularItemsScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="1dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exploreSection"
                    app:strokeWidth="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:strokeWidth="0dp">


                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nutrition_24px" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Item 1"

                            />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="1dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exploreSection"
                    app:strokeWidth="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:strokeWidth="0dp">


                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nutrition_24px" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Item 2"

                            />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="true"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="16dp"

                    android:focusable="true"
                    app:cardElevation="1dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exploreSection"
                    app:strokeWidth="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:strokeWidth="0dp">


                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nutrition_24px" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Item 3"

                            />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:id="@+id/commonDeficiencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingVertical="10dp"
            android:text="Common Deficiencies"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popularItemsScrollView" />

        <HorizontalScrollView
            android:id="@+id/commonDeficienciesScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@+id/commonDeficiencies">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:strokeWidth="0dp">


                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nutrition_24px" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Item 4"

                            />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:strokeWidth="0dp">


                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nutrition_24px" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Item 5"

                            />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="true"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="16dp"
                    android:focusable="true"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:strokeWidth="0dp">


                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nutrition_24px" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Item 6"

                            />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </HorizontalScrollView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailExerciseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="28dp"
        android:layout_marginVertical="32dp">

        <TextView
            android:id="@+id/screenHeader_weekly_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textSize="24sp" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ece6f0"
            android:layout_marginTop="15dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <ProgressBar
                    android:id="@+id/circularProgressBar"
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_centerInParent="true"
                    android:indeterminateOnly="false"
                    android:progress="100"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <TextView
                    android:id="@+id/timeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/circularProgressBar"
                    android:layout_alignTop="@id/circularProgressBar"
                    android:layout_alignEnd="@id/circularProgressBar"
                    android:layout_alignBottom="@id/circularProgressBar"
                    android:gravity="center"
                    android:text="02:00"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/circularProgressBar"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/startBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="18dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/play" />

                        <ImageButton
                            android:id="@+id/pauseBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/pause" />

                        <ImageButton
                            android:id="@+id/resumeBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:src="@drawable/resume" />

                        <ImageButton
                            android:id="@+id/resetBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/replay" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</ScrollView>